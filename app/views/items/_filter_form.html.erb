<%= form_tag(items_path, role: 'form', class:'form-inline', method: :get) do %>
    <div class="form-group">
      <label for="status">Status:</label>
      <%= select_tag("status",
                     options_for_select(Item::STATUES.collect {|status| [ status.titlecase, status ] }, selected: params[:status]),
                     include_blank: "All",
                     class: 'form-control') %>
    </div>
    <div class="form-group">
      <label for="clearance_batch_id">Clearance Batch:</label>
      <%= select_tag("clearance_batch_id",
                     options_for_select(@clearance_batch_ids.collect {|id| [ id, id ] }, selected: params[:clearance_batch_id]),
                     include_blank: "All",
                     class: 'form-control') %>
      <%= submit_tag 'Filter', class: 'btn btn-red' %>
      <%= link_to "Clear Filter", items_path%>
    </div>
<%- end %>